<style>
  .card-container {
    margin-top: 20px;
  }

  .card-header {

    background-color: blue;
    color: white;
  }
</style>

<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-12">
    <button class="btn btn-primary white" style="float: right; margin-left: 10px;" onclick="printDiv('part-order-card')">Print</button>
		<%= link_to 'Export to PDF', part_order_path(@part_order, format: "pdf"), class: "btn btn-primary white", style: "float: right;" %>
	</div>
</div>

<div class="card-container" id="part-order-card">
  
  <div class="card">
  <div class="card-header">
    Part Oder for PO - <%= @part_order.id %>
  </div>
  <div class="card-body">
  	<div class="row">
		<div class="col-12">
			Vendor Name: <%= @part_order.vendor %>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			Vendor Phone Number: <%= @part_order.vendor_contact %>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			Vendor Address: <%= @part_order.vendor_address %>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			Delivery Date: <%= @part_order.delivery_date %>
		</div>
	</div>
	<hr>
  <div class="table-responsive">
  		
        <table class="table table-striped table-sm" id="table-work-orders"> 
          <thead>
            <tr>
              <th>Part Name</th>
              <th>Part Description</th>
              <th>Quantity</th>
              <th>Rate</th>
            </tr>
          </thead>

          <tbody>
          	  <% @part_order.part_items.each do |t| %>
              <tr>
                <td><%= t.name %></td>
                <td><%= t.description %></td>
                <td><%= t.quantity %></td>
                <td><%= t.rate %></td>
              </tr>
              <% end %>
              <tr>
                <td></td>
                <td></td>
                <td style="font-weight: bold">TOTAL</td>
                <td><%= @part_order.total %></td>
              </tr>
          </tbody>
        </table>
      </div>

<br>
	
	<%= link_to 'Back', part_orders_path, class: "btn btn-primary white" %>


  </div>
</div>

</div>
<script>
  function printDiv(divName) {

     var printContents = document.getElementById(divName).innerHTML;
     var originalContents = document.body.innerHTML;

     document.body.innerHTML = printContents;
     window.print();

     document.body.innerHTML = originalContents;
}
  </script>
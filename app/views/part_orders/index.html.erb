<style>
  .card-container {
    margin-top: 20px;
  }

  .card-header {

    background-color: blue;
    color: white;
  }
</style>

<p id="notice"><%= notice %></p>

<div class="card-container">
  
  <div class="card">
  <div class="card-header">
    Part Orders
  </div>
  <div class="card-body">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="open-tab" data-toggle="tab" href="#open" role="tab" aria-controls="open" aria-selected="true">Open</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="closed-tab" data-toggle="tab" href="#closed" role="tab" aria-controls="closed" aria-selected="false">Closed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="receipt-tab" data-toggle="tab" href="#receipt" role="tab" aria-controls="receipt" aria-selected="false">Receipt</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="open" role="tabpanel" aria-labelledby="open-tab">
        <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>PO Number</th>
                    <th>Delivery Date</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @part_orders.each do |part| %>
                    <tr>
                      <td><%= part.id %></td>
                      <td><%= part.delivery_date %></td>
                      <td><%= link_to 'Show', part %></td>
                      <td><%= link_to 'Edit', edit_part_order_path(part) %></td>
                      <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
    <div class="tab-pane fade" id="closed" role="tabpanel" aria-labelledby="closed-tab">
      <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>PO Number</th>
                    <th>Delivery Date</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @closed_part_orders.each do |part| %>
                    <tr>
                      <td><%= part.id %></td>
                      <td><%= part.delivery_date %></td>
                      <td><%= link_to 'Show', part %></td>
                      <td><%= link_to 'Edit', edit_part_order_path(part) %></td>
                      <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
    <div class="tab-pane fade" id="receipt" role="tabpanel" aria-labelledby="receipt-tab">
      <div class="table-responsive">
              <table class="table table-striped table-sm">
                <thead>
                  <tr>
                    <th>PO Number</th>
                    <th>Delivery Date</th>
                    <th>Status</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                  <% @all_part_orders.each do |part| %>
                    <tr>
                      <td><%= part.id %></td>
                      <td><%= part.delivery_date %></td>
                      <td><%= part.status %></td>
                      <td><%= link_to 'Show', part_order_receipt_path(part) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
  </div>


<br>
    <%= link_to 'New Part Order', new_part_order_path, class: "btn btn-primary white", style: "float: right;" %>

  </div>
</div>

</div>

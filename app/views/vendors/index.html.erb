<style>
  .card-container {
    margin-top: 20px;
  }

  .card-header {

    background-color: blue;
    color: white;
  }
</style>
<div class="card-container">
  
  <div class="card">
  <div class="card-header">
    Vendors Search
  </div>
  <div class="card-body">
    <p class="card-text">Vendor Search (Enter Parameters)</p>
     <div class="form-group row">
    <label for="vendorName" class="col-sm-2 col-form-label">Vendor Name</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="vendorName">
    </div>
  </div>
  
  <table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Vendor Code</th>
      <th>Name</th>
      <th>Contact Person</th>
      <th>Phone Number</th>
      <th>Email Address</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.code %></td>
        <td><%= vendor.name %></td>
        <td><%= vendor.contact_person %></td>
        <td><%= vendor.phone_number %></td>
        <td><%= vendor.email_address %></td>
        <td><%= vendor.address %></td>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
<br>
    <%= link_to 'New Vendor', new_vendor_path, class: "btn btn-primary", style: "float: right; color: white;" %>
  </div>
</div>

</div>
